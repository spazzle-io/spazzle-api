{
  "swagger": "2.0",
  "info": {
    "title": "Auth Service",
    "version": "0",
    "contact": {
      "name": "Spazzle",
      "url": "https://spazzle.io"
    }
  },
  "tags": [
    {
      "name": "AuthService"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth/authenticate": {
      "post": {
        "summary": "Authenticates a user via their Web3 wallet and a SIWE (Sign-In with Ethereum) message",
        "description": "Authenticate a user by verifying their Ethereum wallet address using a cryptographic signature",
        "operationId": "AuthService_Authenticate",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AuthenticateResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1AuthenticateRequest"
            }
          }
        ],
        "tags": [
          "AuthService"
        ],
        "security": []
      }
    },
    "/auth/siwe-payload": {
      "get": {
        "summary": "Generate SIWE message payload for EVM compatible chains",
        "description": "Generates a Sign-In With Ethereum (SIWE) message payload for the specified wallet address and domain",
        "operationId": "AuthService_GetSIWEPayload",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GetSIWEPayloadResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "walletAddress",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "domain",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "uri",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "chainId",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          }
        ],
        "tags": [
          "AuthService"
        ],
        "security": []
      }
    }
  },
  "definitions": {
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "v1AuthenticateRequest": {
      "type": "object",
      "properties": {
        "walletAddress": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        }
      }
    },
    "v1AuthenticateResponse": {
      "type": "object",
      "properties": {
        "credential": {
          "$ref": "#/definitions/v1Credential"
        },
        "session": {
          "$ref": "#/definitions/v1Session"
        }
      }
    },
    "v1Credential": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "walletAddress": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1GetSIWEPayloadResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "nonce": {
          "type": "string"
        },
        "walletAddress": {
          "type": "string"
        },
        "issuedAt": {
          "type": "string",
          "format": "date-time"
        },
        "expiresAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1Session": {
      "type": "object",
      "properties": {
        "sessionId": {
          "type": "string"
        },
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "accessTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        },
        "refreshTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        },
        "tokenType": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "bearer": {
      "type": "apiKey",
      "description": "Authentication token, prefixed by Bearer: bearer \u003ctoken\u003e",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "bearer": []
    }
  ]
}
